{
    "$id": "https://ccf.dev/claims.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A schema for JSON claims",
    "type": "object",
    "properties": {
      "schema": {
        "type": "object",
        "digest": {
            "type": "string",
            "contentEncoding": "base16"
        },
        "algorithm": {
            "type": "string"
        }
      },
      "claims": {
        "type": "array",
        "items": {
            "type": "object",
            "oneOf": [
                { "$ref": "#/$defs/claim_digest" },
                { "$ref": "#/$defs/claim" }
            ]
        }
      },
      "algorithm": {
        "type": "string"
      }
    },
    "$defs": {
        "claim_digest": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "digest": {
                    "contentEncoding": "base16"
                }
            },
            "required": [ "name", "digest", "algorithm" ],
            "additionalProperties": false
        },
        "claim":  {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "claim": {
                    "type": "string",
                    "contentEncoding": "base64"
                },
                "claim_key": {
                    "type": "string",
                    "contentEncoding": "base16"
                },
                "algorithm": {
                    "type": "string"
                }
            },
            "required": [ "name", "claim", "claim_key", "algorithm" ],
            "additionalProperties": false
        }
    },
    "required": [ "schema", "claims", "algorithm" ]
  }